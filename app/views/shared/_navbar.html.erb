<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="leftblock">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %><span style="color:#AAEF68"><strong>Chameleon</strong></span>
    <% end %>
  </div>

  <div class="rightblock flex-grow-1">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto d-flex justify-content-between w-100">
        <% if user_signed_in? %>
          <div class="d-flex">
            <li class="nav-item">
              <%= image_tag "dashboard.png", alt: "Dashboard", width: 20 %>
              <%= link_to "Dashboard", projects_path, class: "nav-link" %>
            </li>
            <li class="nav-item" >
              <%= image_tag "add_button.png", alt: "Dashboard", width: 20 %>
              <%= link_to "Add Project", new_project_path, class: "nav-link" %>
            </li>
          </div>
          <div class="d-flex">
            <li class= "nav-item">
              <%= image_tag "bell.png", alt: "Bell", width: 20 %>
            </li>

            <li class="nav-item dropdown">

              <%= image_tag "avatar_pics/#{current_user.first_name}.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Action", "#", class: "dropdown-item" %>
                <%= link_to "Another action", "#", class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
        <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

</div>
